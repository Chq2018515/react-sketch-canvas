{
  "name": "react-sketch-canvas",
  "version": "5.3.1",
  "description": "react-sketch-canvas - Freehand vector drawing tool for React using SVG as canvas",
  "license": "MIT",
  "author": "Vinoth Pandian",
  "homepage": "https://vinoth.info/react-sketch-canvas",
  "repository": "https://github.com/vinothpandian/react-sketch-canvas.git",
  "keywords": [
    "react-component",
    "sketch",
    "canvas",
    "drawing",
    "freehand",
    "vector",
    "svg-canvas",
    "react-sketch"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "module": "dist/react-sketch-canvas.esm.js",
  "size-limit": [
    {
      "path": "dist/react-sketch-canvas.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-sketch-canvas.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@size-limit/preset-small-lib": "^4.9.0",
    "@storybook/addon-essentials": "^6.1.8",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^6.1.8",
    "@storybook/addon-links": "^6.1.8",
    "@storybook/addons": "^6.1.8",
    "@storybook/react": "^6.1.8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "babel-loader": "^8.2.2",
    "husky": "^4.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.9.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "immer": "^8.0.0",
    "pepjs": "^0.5.2"
  }
}
